<div class="row">

  <!-- Add Sport/Skill Level Modal -->
  <div class="col-md-2 col-md-offset-2 edit-button">

    <!-- Button trigger Add Sport modal -->
    <button type="button" class="btn btn-default-solid" data-toggle="modal" data-target="#myModal">
      <i class="fa fa-plus"></i> Add more activities!
    </button>

    <!-- Add Sport Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <%= form_for Activity.new(user: @user) , html:{class:"form-horizontal"}, remote: true do |activity_form| %>
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myModalLabel">What else do you enjoy doing?</h4>
            </div>
            <div class="modal-body">
              <form class="form-horizontal">
                <div class="form-group">
                  <label for="inputEmail3" class="col-sm-4 control-label">Activity</label>
                  <div class="col-sm-5">
                    <% all_activities = Activity.sports.keys %>
                    <%= activity_form.select :sport, options_for_select(all_activities.sort), class:'form-control' %>
  <!-- REPLACE ACTIVITY.sports.keys, set in controller? show? index? where? anywhere? or in USER? -->
                  </div>
                </div>

                <div class="form-group">
                  <label for="inputEmail3" class="col-sm-4 control-label">Skill Level</label>
                  <div class="col-sm-5">
                    <% all_skills = Activity.skill_levels.keys %>
                    <%= activity_form.select :skill_level, options_for_select(all_skills), class:'form-control' %>
  <!-- REPLACE ACTIVITY.sports.keys, set in controller? show? index? where? anywhere? or in USER? -->
                  </div>
                </div>

              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <%= activity_form.submit "Save Changes", class:"btn btn-default" %>
              </div>
            </div>
          <% end %><!-- End of form  -->
        </div>
      </div>
    </div> <!-- End Modal  -->


  <!-- Add Availability Modal -->
  <div class="col-md-2 col-md-offset-4 edit-button">

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-default-solid" data-toggle="modal" data-target="#myModal1">
      <i class="fa fa-pencil"></i> Change availability
    </button>

    <!-- Modal -->
    <div class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">When can you team up?</h4>
          </div>
          <div class="modal-body">
            <%= form_for Availability.new(user: @user) , html:{class:"form-horizontal"}, remote: true do |availability_form| %>
            <form class="form-horizontal">

              <div class="form-group">
                <label for="inputEmail3" class="col-sm-4 control-label">Day</label>
                <div class="col-sm-5">
                  <% all_days = Availability.days.keys %>
                  <%= availability_form.select :day, options_for_select(all_days), class:'form-control' %>
<!-- REPLACE ACTIVITY.sports.keys, set in controller? show? index? where? anywhere? or in USER? -->
                </div>
              </div>

              <div class="form-group">
                <label for="inputEmail3" class="col-sm-4 control-label">Time</label>
                <div class="col-sm-5">
                  <% all_times = Availability.times.keys %>
                  <%= availability_form.select :time, options_for_select(all_times), class:'form-control' %>
<!-- REPLACE ACTIVITY.sports.keys, set in controller? show? index? where? anywhere? or in USER? -->
                </div>
              </div>

            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <%= availability_form.submit "Save Changes", class:"btn btn-default" %>
            </div>
            <% end %><!-- End form -->
        </div>
      </div>
    </div>
  </div>
</div>
