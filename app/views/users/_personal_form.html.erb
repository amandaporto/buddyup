<%= form_for @user , html:{class:"form-horizontal"} do |personal_form| %>
<h3 class="text-center edit-message"> Tell us how awesome you are! </h3>

  <div class="row edit-profile-personal">
    <div class="col-md-2 col-md-offset-2 text-center">
      <!-- Profile Picture -->
      <% if @user.image %>
        <%= image_tag @user.image , class:"img-thumbnail"%>
      <% else %>
        <%= image_tag 'icon-profile.png' , class:"img-thumbnail"%>
      <% end %>
      <!-- Save button -->
      <div class="text-center">
        <%= personal_form.submit "Save Changes", class:"btn btn-fixed-solid" %>
      </div>
    </div>

    <!-- Personal Information  -->
    <div class="col-md-4">
      <h4 class="col-md-offset-3 edit-profile-text "> Edit your profile </h4>
      <form class="form-horizontal">
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-3 control-label">Name</label>
          <div class="col-sm-9">
            <%= personal_form.text_field :name , class:"form-control", :placeholder => 'Name' %>
          </div>
        </div>

        <div class="form-group">
          <label for="inputPassword3" class="col-sm-3 control-label">Zip Code</label>
          <div class="col-sm-9">
            <%= personal_form.text_field :zip , class:"form-control", :placeholder => 'Zip Code' %>
          </div>
        </div>

        <div class="form-group">
          <label for="inputPassword3" class="col-sm-3 control-label">Email</label>
          <div class="col-sm-9">
            <%= personal_form.text_field :email , class:"form-control", :placeholder => 'Email' %>
          </div>
        </div>
      </form>

    </div>
  </div>
<% end %> <!-- /Form -->
