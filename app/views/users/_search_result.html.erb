
<% @users.map do |user| %>
<!-- Content Row -->
<div class="row search-result-list">

  <!-- Profile Picture Column -->
  <div class="col-md-3">
    <img src="http://cdn.photoaffections.com/images/icon-profile.png" alt="Profile Picture" class="img-thumbnail">
  </div>

  <!-- user information Column -->
  <div class="col-md-3">
    <ul class="profile-user">
      <li>
        <%= user.name %>
      </li>
      <li>
        <i class="fa fa-map-marker"></i><%= user.address %>
      </li>
    </ul>
  </div>

  <%- # saves away the activities for the user once and reuse it below %>
  <% current_activities = user.activities.to_a %>

  <!-- Sports Column -->
  <div class="col-md-3">
    <h4>Sports</h4>
    <% current_activities.map do |activity| %>
      <p><i class="icon-<%= activity.sport.downcase %>"></i><%= activity.sport %></p>
    <% end %>
  </div>
  <!-- Skills Level Column -->
  <div class="col-md-3">
    <h4>Skill Level</h4>
    <% current_activities.map do |activity| %>
    <p><i class="fa fa-circle-o-notch"></i><%= activity.skill_level %></p>
    <% end %>
  </div>
</div>
<!-- /.row -->
<% end %>
